.row
  .small-12
    .login-box
      %h4 注册管理后台
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        - unless resource.errors.empty?
          #error_explanation
            %h3 你输入的信息有误：
            %ul
              - resource.errors.messages.values.flatten.each do |error_message|
                %li= error_message
        %fieldset
          .form-group
            .controls
              .input-group.col-sm-12.col-xs-12
                %span.input-group-addon
                  %i.fa.fa-user
                = f.text_field :email, autofocus: true, placeholder: '电话', class: 'form-control'
          .form-group
            .controls
              .input-group.col-sm-12.col-xs-12
                %span.input-group-addon
                  %i.fa.fa-lock
                = f.password_field :password, autocomplete: 'off', placeholder: '密码(最少8位)', class: 'form-control'
          .form-group
            .controls
              .input-group.col-sm-12.col-xs-12
                %span.input-group-addon
                  %i.fa.fa-lock
                = f.password_field :password, autocomplete: 'off', placeholder: '确认密码', class: 'form-control'
          %button.btn-primary.login-btn{:type => 'submit'}
            %i.icon-off.icon-white
            注册
          .clearfix
          %hr/
          %div
            已有帐号，请
            \
            =render 'customers/shared/links'