.row
  .col-xs-12.col-sm-12.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
    .login-box
      %h4 登陆
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %fieldset
          .form-group
            .controls
              .input-group.col-sm-12.col-xs-12
                %span.input-group-addon
                  %i.fa.fa-user
                = f.text_field :email, autofocus: true, placeholder: '电话', class: 'form-control'
          .form-group
            .controls
              .input-group.col-sm-12.col-xs-12
                %span.input-group-addon
                  %i.fa.fa-lock
                = f.password_field :password, autocomplete: 'off', placeholder: '密码', class: 'form-control'
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me, '下次自动登录'
          %button.btn-primary.login-btn.btn-block{:type => 'submit'}
            %i.icon-off.icon-white
            登录
          .clearfix
          %hr/
          %div
            还没有帐号，请
            \
            =render 'admins/shared/links'