= form_for @admin do |f|
  - if @admin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin.errors.count, "error")} prohibited this admin from being saved:"
      %ul
        - @admin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label '密码'
    %br/
    = f.password_field :password, autocomplete: 'off', placeholder: '密码(最少8位)'
  .actions
    = f.submit 'Save'
