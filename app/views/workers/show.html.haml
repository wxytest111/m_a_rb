%p#notice= notice

%p
  %b Name:
  = @worker.name
%p
  %b Mobile:
  = @worker.mobile
%p
  %b Avatar:
  = @worker.avatar
%p
  %b Description:
  = @worker.description
%p
  %b 服务区域:
  - all_streets = Street.all
  - all_streets.each do |street|
    =check_box_tag 'check_street', street.id, @worker.has_street(street), disabled:true
    =street.name
%p
  %b Pic:
  = @worker.pic
%p
  %b Star:
  = @worker.star
%p
  %b Gender:
  = @worker.gender
%p
  %b Skills:
  = @worker.skills

= link_to 'Edit', edit_worker_path(@worker)
\|
= link_to 'Back', workers_path
