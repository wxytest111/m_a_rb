= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :other_name
    = f.text_field :other_name
  .field
    = f.label :other_mobile
    = f.text_field :other_mobile
  .field
    = f.label :street_id, '所属街道'
    = f.collection_select :street_id, Street.all, :id, :name, {:selected=>(@order.street_id)}
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :postscript
    = f.text_field :postscript
  .field
    = f.label :order_time
    = f.datetime_select :order_time
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
