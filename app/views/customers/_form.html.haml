= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :uin
    = f.text_field :uin
  .field
    = f.label :passwd
    = f.text_field :passwd
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sex
    = f.number_field :sex
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :district
    = f.text_field :district
  .actions
    = f.submit 'Save'
