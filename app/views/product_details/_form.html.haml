= form_for @product_detail do |f|
  - if @product_detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_detail.errors.count, "error")} prohibited this product_detail from being saved:"
      %ul
        - @product_detail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :product_id
    = f.collection_select :product_id, Product.all, :id, :name, {:selected=>(@product_detail.product_id)}
  .actions
    = f.submit 'Save'
