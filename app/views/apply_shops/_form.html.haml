= form_for @apply_shop do |f|
  - if @apply_shop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@apply_shop.errors.count, "error")} prohibited this apply_shop from being saved:"
      %ul
        - @apply_shop.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sex
    = f.number_field :sex
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :creid
    = f.text_field :creid
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :shop
    = f.text_field :shop
  .field
    = f.label :state
    = f.number_field :state
  .actions
    = f.submit 'Save'
