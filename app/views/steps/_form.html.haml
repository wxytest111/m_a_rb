= form_for @step do |f|
  - if @step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@step.errors.count, "error")} prohibited this step from being saved:"
      %ul
        - @step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :product_id
    = f.collection_select :product_id, Product.all, :id, :name, {:selected=>(@step.product_id)}
  .actions
    = f.submit 'Save'
